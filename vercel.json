{
  "trailingSlash": false,
  "cleanUrls": true,
  "rewrites": [
    { "source": "/public", "destination": "/public/index.html" },
    { "source": "/public/(.*)", "destination": "/public/$1" }, 
    { "source": "/blog", "destination": "/blog/index.html" },
    { "source": "/blog/(.*)", "destination": "/blog/$1" },
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/(.*)", "destination": "/public/index.html" }
  ]
}